{% extends 'base.html.twig' %}
{% set selected_nav = 'user' %}
{% set editor_is_super_admin = is_granted('ROLE_SUPER_ADMIN') %}

{% block body %}
    <div class="page-header">
        <h1>
            Liste des utilisateurs
            <small>
                <a href="{{ path('user_new') }}" class="btn btn-xs btn-success">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
            </small>
        </h1>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                {% if editor_is_super_admin %}
                    <th class="text-center">Administrateur</th>
                {% endif %}
                <th class="text-center">Référent</th>
                <th class="text-center">Compte actif</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users if users|length %}
                <tr>
                    <td>
                        <a href="{{ path('user_edit', {'id': user.id}) }}">
                            {{ user }}
                        </a>
                    </td>
                    <td class="text-center">
                        {% if editor_is_super_admin and user.isSuperAdmin %}
                            <span class="text-success">
                                <span class="glyphicon glyphicon-ok"></span>
                            </span>
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if user.hasRole('ROLE_ADMIN') %}
                            <span class="text-success">
                                <span class="glyphicon glyphicon-ok"></span>
                            </span>
                        {% endif %}
                    </td>
                    <td class="text-center">
                        {% if user.isEnabled %}
                            <span class="text-success">
                                <span class="glyphicon glyphicon-ok"></span>
                            </span>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="text-center" colspan="{% if editor_is_super_admin %}4{% else %}3{% endif %}">Aucun utilisateur</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
